<mvc:View controllerName="frontend.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
      <Page id="_IDGenPage" title="Login page" showHeader="true">
                <content>
                    <VBox id="_IDGenVBox" alignItems="Center" justifyContent="Center" height="100%">            
                        <FlexBox id="_IDGenFlexBox" direction="Column" alignItems="Center" justifyContent="Center">
                            <Title id="_IDGenTitle" text="Login" class="sapUiMediumMarginBottom"/>
                            <Input id="userInput" placeholder="Username" class="sapUiSmallMarginBottom" width="300px"/>
                            <Input id="passwordInput" placeholder="Password" type="Password" class="sapUiSmallMarginBottom" width="300px"/>
                            <HBox id="_IDGenHBox" class="sapUiSmallMarginBottom">
                                <items>
                                    <Button id="_IDGenButton"  type="Emphasized"  text="Login" press="onLoginPress" width="300px"/>
                                </items>
                            </HBox>
                        </FlexBox>
                    </VBox>
                </content>
            </Page>
</mvc:View>